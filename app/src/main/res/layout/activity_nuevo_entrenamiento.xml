<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp">

    <!-- ImageView para la imagen de fondo-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo4"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <!-- ScrollView para permitir desplazamiento -->
    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Contenido adicional (botones) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <!-- Botones originales -->
            <Button
                android:id="@+id/btnYoga1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_background"
                android:text="PRÁCTICA COMPLETA\n Vinyasa Flow, un calentamiento suave."
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/btnYoga2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_background"
                android:text="YOGA RESTAURATIVO\nRelájate, estira. Sin posturas de pie."
                tools:layout_editor_absoluteX="0dp" />
            <Button
                android:id="@+id/btnYoga3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_background"
                android:text="Nuevo Botón 3"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/btnYoga4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_background"
                android:text="Nuevo Botón 4"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/btnYoga5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_background"
                android:text="Nuevo Botón 5"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/btnYoga6"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_background"
                android:text="Nuevo Botón 6"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/btnYoga7"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_background"
                android:text="Nuevo Botón 7"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/btnYoga8"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_background"
                android:text="Nuevo Botón 8"
                tools:layout_editor_absoluteX="0dp" />
            <Button
                android:id="@+id/btnYoga9"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_background"
                android:text="Nuevo Botón 9"
                tools:layout_editor_absoluteX="0dp" />
            <Button
                android:id="@+id/btnYoga10"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_background"
                android:text=""
                tools:layout_editor_absoluteX="0dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Botón SELECCIONAR -->
    <Button
        android:id="@+id/btnSelectStyle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="SELECCIONAR"
        android:textColor="@color/white"
        android:backgroundTint="@color/morado"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
