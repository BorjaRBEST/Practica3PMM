<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp">

    <!-- ImageView para la imagen de fondo -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/btnYoga1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/btn_background"
        android:text="PRÁCTICA COMPLETA\n
        Vinyasa Flow. Un calentamiento suave, una mezcla de posturas de pie y estiramientos profundos en el suelo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.080"
        tools:layout_editor_absoluteX="0dp" />
    <Button
        android:id="@+id/btnYoga2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/btn_background"
        android:text="YOGA RESTAURATIVO\n
        Relájate, estira. Sin posturas de pie."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnSelectStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SELECCIONAR"
        android:background="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnYoga1"
        app:layout_constraintVertical_bias="0.934"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
